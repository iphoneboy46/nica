extends layout/layout
block vars
    -title = 'lien-he'
    -mainClass = 'page-template pt'
    -bodyClass = ''
    -hdClass = ''

block container 
    +breadcrumbs("Trang chủ","","Liên hệ")
    //- +banner-main("Liên hệ","KẾT NỐI VỚI AKACONS","lienhebg.png")
    section.contact
        .container
            .contact_wrap.d-wrap 
                .contact_lf.d-item
                    .contact_lf-wrap 
                        .contact_lf-top 
                            h2.contact-tt.mb-48.fw-7 Liên hệ với chúng tôi ngay để được giải đáp
                            h3.contact-tt-2.fw-7.mb-12 CÔNG TY TNHH DỊCH VỤ TRUYỀN THÔNG NICA
                            ul.infoct-list 
                                li.infoct-item 
                                    span.infoct-tt Địa chỉ: 
                                    span.infoct-txt 688/57/101 Lê Đức Thọ, Phường 15, Quận Gò Vấp, Thành phố Hồ Chí Minh, Việt Nam
                                li.infoct-item 
                                    span.infoct-tt Số điện thoại:
                                    a.infoct-txt(href="") 0318 191 532    
                                li.infoct-item 
                                    span.infoct-tt Email:
                                    a.infoct-txt(href="") admin@nica.vn
                        .contact_lf-bottom 
                            h2.note-lg.fw-7.mb-10 Theo dõi chúng tôi
                            ul.ctsc-list 
                                li.ctsc-item 
                                    a(href="") 
                                        +img("Facebook.png")

                                li.ctsc-item 
                                    a(href="") 
                                        +img("Twitter.png")
                                li.ctsc-item 
                                    a(href="") 
                                        +img("Instagram.png")
                                li.ctsc-item 
                                    a(href="") 
                                        +img("LinkedIn.png")
                                li.ctsc-item 
                                    a(href="") 
                                        +img("YouTube.png")
                .contact_rt.d-item
                    .contact_rt-wrap
                        form(action="") 
                            .contact_rt-list 
                                .contact_rt-item 
                                    .form-item.custom 
                                        label.form-item-lb(for="name") 
                                            |Họ và tên 
                                            strong *
                                        input(type="text" placeholder="Họ và tên của bạn" id="name").form-item-ip
                                .contact_rt-item 
                                    .form-item.custom 
                                        label.form-item-lb(for="email") 
                                            |Email 
                                            strong *
                                        input(type="text" placeholder="Email của bạn" id="email").form-item-ip
                                .contact_rt-item        
                                    .form-item.custom 
                                        label.form-item-lb 
                                            |Nội dung 
                                        textarea(placeholder="Hãy cho tôi biết thêm về vấn đề của bạn?" rows = "4" cols = "36").form-item-tx 
                            +btn("Gửi thông tin","button","far fa-arrow-right","")
   
    section.contact_map.line 
        .container
            .contact_map--wrap 
                iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62708.261900752055!2d106.57995184863283!3d10.790899300000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ff1a24e9c9b%3A0xa398430e999c86b8!2sMona%20Software%20-%20C%C3%B4ng%20ty%20TNHH%20Ph%E1%BA%A7n%20M%E1%BB%81m%20Mona!5e0!3m2!1svi!2s!4v1699808144941!5m2!1svi!2s' width='600' height='450' style='border:0;' allowfullscreen='' loading='lazy' referrerpolicy='no-referrer-when-downgrade')
