                                li.news_hot--rt-item 
                                    a.news_hot--rt-link(href="#")
                                        span.news_hot--rt-item-wrap
                                            span.news_hot--rt-lf 
                                                span.news_hot--rt-img 
                                                    +img(list.img)
                                            span.news_hot--rt-rt 
                                                span.note-text.fw-7 #{list.title}
