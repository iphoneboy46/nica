extends layout/layout
block vars
    -title = 'tin-tuc'
    -mainClass = 'page-template pt'
    -bodyClass = ''
    -hdClass = ''

block container
    +breadcrumbs("Trang chủ","","Tin tức")
    +banner-main("TIN TỨC","KHÁM PHÁ CUỘC HÀNH TRÌNH ĐẦY HỨA HẸN","newsbg.png")
    section.news_hot.line
        .container
            +title-sm3("TIN TỨC NỔI BẬT")

            .news_hot--wrap.d-wrap
                .news_hot--lf.d-item
                    .news_hot--lf-wrap 
                        a.news_hot--lf-content(href="#")
                            span.news_hot--lf-img 
                                +img("hot1.png")
                            span.news_hot--lf-title 
                                span.news_hot--lf-title-top 
                                    span.note-lg.cl-white.fw-7.fl-Anybody 20+ mẫu đá lát sân vườn đẹp không tưởng
                                    span.note-ic 
                                        i.far.fa-arrow-up
                                span.news_hot--lf-title-bottom 
                                    span.note-sm.cl-white 07.09.2023          
                .news_hot--rt.d-item
                    .news_hot--rt-wrap 
                        ul.news_hot--rt-list
